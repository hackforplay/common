{
  "name": "@hackforplay/monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@11.2.0",
  "scripts": {
    "build": "turbo run build",
    "test": "npx prettier -c . && turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "build:docs": "cd packages/docs && npm run build-docs && bundle exec jekyll build"
  },
  "devDependencies": {
    "prettier": "2.8.8",
    "turbo": "2.4.4"
  }
}
