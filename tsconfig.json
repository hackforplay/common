{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2018",
    "module": "commonjs",
    "allowJs": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    /* Module Resolution Options */
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
